---
const { title, icon, href } = Astro.props;
---

<a
    href={href}
    target="_blank"
    class="w-26 bg-highlight_400 hover:bg-highlight_600 dark:bg-lightblue_500 dark:hover:bg-lightblue_300 text-white font-bold py-2 px-4 rounded-full inline-flex items-center"
>
    <span>{title}</span>
    <i class={`${icon} ml-2 cursor-pointer`}></i>
</a>
