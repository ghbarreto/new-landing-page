---
import Text from './Text.astro';
import Icon from './Icon.astro';

const { data } = Astro.props;
---

<div class="d-flex justify-center pb-5 p-5">
    <img
        src={data.avatar_url}
        alt={data.name}
        class="rounded-full w-72 border-2 border-highlight_300 shadow-lg shadow-highlight_300 dark:border-lightblue_600 dark:shadow-lightblue_600"
    />
    <div class="mt-3">
        <Text text={data.name} />
    </div>
    <div class="flex items-center">
        <div>Location: {data.location}</div>
        <Icon src="public/cn-flag.svg" />
    </div>
</div>
