---
import { Text } from '../components/Text';
import Links from '../templates/Links.astro';

const center = 'w-3/6 mx-auto mt-2 mobile:w-5/6 mobile:flex mobile:justify-center';

const { data } = Astro.props;
---

<section class="mt-5">
    <div class="flex mobile:block">
        <div class="w-3/6 mobile:my-0 mobile:mx-auto mobile:w-1/6">
            <img
                src={data.avatar_url}
                alt={data.name}
                class="my-0 mx-auto rounded-full w-72 border-2 border-highlight_300 shadow-lg shadow-highlight_300 dark:border-lightblue_600 dark:shadow-lightblue_600"
            />
        </div>

        <div class="mt-3 text-left">
            <span class="flex justify-center">
                <Text client:load text="hello" type="header" />
            </span>

            <span class={`flex items-center ${center}`}>
                <Text client:load text="whoami" type="body" />
                <Text client:load type="bold" text={data.name} customClasses="ml-1" />
            </span>

            <Text client:load text="about" type="body" customClasses={center} />
            <Text client:load text="company" type="link" href="https://fansunite.com/" customClasses={center} />
            <Text client:load text="role" customClasses={center} type="body" />

            <!-- <Text client:load text="" type="link" href="https://fansunite.com/" /> -->
            <Text client:load text="" customClasses="ml-1" type="body" />
            <div class="flex justify-center mt-5 mb-20 mt-5 gap-5 mobile:mb-3">
                <Links title="Linkedin" href="https://www.linkedin.com" icon="gg-work-alt" />
                <Links title="Resume" href="https://github.com" icon="gg-file-document" />
            </div>
        </div>
    </div>
</section>
