---
import Tooltip from './Tooltip.astro';
import { Square } from '../components/Square';
const { data } = Astro.props;
---

<div class="columns-53 gap-x-0.5 max-w-4xl block mobile:columns-20">
    {
        Object.keys(data).map((item: any, index) => {
            const o: any = Object.keys(data[item]);
            const value: any = Object.values(data[item]);
            const isDesktop = index > 240;

            return (
                <>
                    <Tooltip isContributions value={value} index={index} target={`tooltip-default-${index}`} date={o} />
                    <Square client:load index={index} value={value} isDesktop={isDesktop} />
                </>
            );
        })
    }
</div>
